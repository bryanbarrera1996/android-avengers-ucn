<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="410dp"
        android:layout_height="84dp"
        android:layout_marginBottom="52dp"
        android:background="@color/red_marvel"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/avengersblack"
        app:popupTheme="@style/Theme.MarvelHeroes.PopupOverlay"
        app:title="Marvel Heroes" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ironman"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:contentDescription="@android:string/untitled"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button1"
                tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:id="@+id/ironman2"
                android:layout_width="183dp"
                android:layout_height="216dp"
                android:contentDescription="@android:string/untitled"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button2"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ironman4"
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:contentDescription="@android:string/untitled"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button3"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ironman3"
                android:layout_width="197dp"
                android:layout_height="215dp"
                android:contentDescription="@android:string/untitled"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button4"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/avenger_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>